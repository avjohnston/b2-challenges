<h1>Update <%= @professor.name %> </h1>

<%= form_with url: "/professors/#{@professor.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => "#{@professor.name}", required: true %><br><br>
  <%= f.label :age %>
  <%= f.number_field :age, :value => "#{@professor.age}", required: true %><br><br>
  <%= f.label :specialty %>
  <%= f.text_field :speciality, :value => "#{@professor.speciality}", required: true %><br><br>

  <%= f.submit "Update #{@professor.name}" %>
<% end %>
